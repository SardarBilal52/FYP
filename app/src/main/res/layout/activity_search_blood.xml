<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchBloodActivity">


    <LinearLayout
        android:id="@+id/blood_location_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C03C2B"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_blood"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="Blood"
            android:textAlignment="textEnd"
            android:textColor="#fff"
            android:textSize="20sp" />



        <TextView
            android:id="@+id/search_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="25sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="|" />


        <TextView
            android:id="@+id/search_blood_separation_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:text="location"
            android:textColor="#fff"
            android:textSize="20sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/search_blood_avialible_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/blood_location_layout"
        android:layout_marginTop="0dp"
        android:background="#C03C2B"
        android:text="Donors are availible"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="15sp"
        android:textStyle="italic" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/find_friends_recycler_list"
        android:layout_width="401dp"
        android:layout_height="662dp"
        android:layout_below="@id/blood_location_layout"
        android:layout_centerVertical="true"

        android:layout_marginTop="24dp" />


</RelativeLayout>