<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawable_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <include
            android:id="@+id/main_page_tool_bar"
            layout="@layout/app_bar_layout"
            >

        </include>
        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/main_table"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_page_tool_bar"
            xmlns:app="http://schemas.android.com/apk/res-auto"

            android:background="#fff">

            <TableLayout
                android:id="@+id/second_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                >


                <TableRow android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:gravity="center"
                        android:padding="5dp"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/profile_btn"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="0dp"
                            android:padding="20dp"
                            android:background="@drawable/shadow"
                            android:src="@drawable/profile"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:layout_marginLeft="0dp"
                            android:textStyle="bold"
                            android:textColor="#C03C2B"
                            android:text="Profile"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:layout_marginLeft="100dp"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/blood_rquest_btn"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="0dp"
                            android:padding="20dp"
                            android:background="@drawable/shadow"
                            android:src="@drawable/bloodrequest"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:textColor="#C03C2B"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"

                            android:text="blood Req"/>
                    </LinearLayout>


                </TableRow>

                <TableRow android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/search_btn"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginRight="0dp"
                            android:padding="20dp"
                            android:background="@drawable/shadow"
                            android:src="@drawable/search"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#C03C2B"
                            android:textStyle="bold"
                            android:text="Searching"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:layout_marginLeft="100dp"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/inbox_btn"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="0dp"
                            android:padding="20dp"
                            android:background="@drawable/shadow"
                            android:src="@drawable/inbox"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:textColor="#C03C2B"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:text="Inbox"/>
                    </LinearLayout>



                </TableRow>
                <TableRow android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/blood_bank_btn"

                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="0dp"
                            android:padding="20dp"
                            android:background="@drawable/shadow"
                            android:src="@drawable/bloodbank"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="#C03C2B"
                            android:textStyle="bold"
                            android:text="Blood Bank"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:layout_marginLeft="100dp"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/compitibility_btn"

                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="0dp"
                            android:padding="20dp"
                            android:background="@drawable/shadow"
                            android:src="@drawable/compatbility"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:textColor="#C03C2B"
                            android:layout_marginLeft="0dp"
                            android:textStyle="bold"
                            android:text="Compitibolity"/>
                    </LinearLayout>



                </TableRow>
                <TableRow android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"

                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/view_request_btn"

                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="0dp"
                            android:padding="20dp"
                            android:background="@drawable/shadow"
                            android:src="@drawable/viewbloodsymbol"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:textColor="#C03C2B"
                            android:textStyle="bold"
                            android:text="V blood req"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:layout_marginLeft="100dp"
                        android:orientation="vertical">
                        <ImageButton
                            android:id="@+id/rate_us_btn"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_margin="0dp"
                            android:padding="20dp"
                            android:background="@drawable/shadow"
                            android:src="@drawable/rateus"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:textColor="#C03C2B"
                            android:textStyle="bold"
                            android:layout_marginLeft="15dp"
                            android:text="Rate Us"/>
                    </LinearLayout>


                </TableRow>




            </TableLayout>

        </TableLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/main_table"
            android:layout_marginTop="35dp"
            android:background="#C03C2B"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_table"
                android:background="#C03C2B"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="#C03C2B"
                    android:text=""
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:background="#C03C2B"
                android:text=""
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="12sp"
                android:textStyle="italic" />

        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemTextColor="#EC0909"
        android:layout_marginBottom="10dp"
        android:background="#fcfbfb"
        app:menu="@menu/navigation_menu"
        >

    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>