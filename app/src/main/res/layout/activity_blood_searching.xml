<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".bloodSearchingActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#C03C2B"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:text="Searching Activity"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/findBloodLayout"
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/linearLayout"
        android:layout_marginRight="40dp"
        android:background="#fff">


        <TextView
            android:id="@+id/simpleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search  blood donors"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#CE1E1E"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/simpleText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Note : For blood earching enter your city name and required blood group in the following box"
            android:textAlignment="center"
            android:layout_below="@+id/simpleText"
            android:textAllCaps="false"
            android:textColor="#CE1E1E"
            android:textSize="12sp" />


        <EditText
            android:id="@+id/findBloodInbox"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/simpleText2"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/displayshadow"
            android:hint="Enter City name..."
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="20sp" />


        <Spinner
            android:id="@+id/findBloodSpinner"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/findBloodInbox"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/displayshadow"
            android:popupBackground="@drawable/displayshadow"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textStyle="italic">

        </Spinner>

        <ImageButton
            android:id="@+id/search_icon_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/findBloodSpinner"

            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="111dp"
            android:background="@drawable/shadow"
            android:padding="2dp"
            android:src="@drawable/search" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/findBloodLayout"
        android:layout_marginTop="60dp"
        android:background="#C03C2B"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#C03C2B"
            android:orientation="horizontal">



        </LinearLayout>


    </LinearLayout>


</RelativeLayout>